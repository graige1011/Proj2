<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.proj2.Scene2Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" text="Welkom bij AIsistify" style="-fx-font-size: 24px; -fx-text-fill: darkblue;"/>
    <TextField fx:id="textField" promptText="Voer je naam in" style="-fx-background-color: white;"/>
    <TextField fx:id="textField3" promptText="Voer je email in" style="-fx-background-color: white;"/>
    <TextField fx:id="textField4" promptText="Voer je gebruikersnaam in" style="-fx-background-color: white;"/>
    <PasswordField fx:id="passwordField" promptText="Voer wachtwoord in" style="-fx-background-color: white;"/>
    <Button fx:id="registerButton" text="Register" onAction="#handleRegistration"
            styleClass="hover-button" stylesheets="@styles.css" />


</VBox>
